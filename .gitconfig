[alias]
  d       = difftool
  m       = mergetool
  aa      = add --all
  ca      = commit --amend
  co      = checkout
  cp      = cherry-pick
  st      = status
  prune   = fetch --prune
  undo    = reset --soft HEAD^
  unstage = reset HEAD
  up      = !git fetch origin && git rebase origin/master
  l       = log --oneline --decorate --color
  la      = !git config -l | grep alias | cut -c 7-
[core]
	excludesfile = ~/.gitignore
  editor = nvim
[commit]
  ; gpgSign = true
	verbose = true
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[difftool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE
[merge]
	ff = only
	tool = vimdiff
[mergetool]
  prompt = false
	keepBackup = false
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED  -c '$wincmd w' -c 'wincmd J'
  ; cmd = nvim -f -c Gdiffsplit! $MERGED
[push]
	default = current
[rebase]
	autosquash = true
[status]
  showUntrackedFiles = all
[pull]
	rebase = true
