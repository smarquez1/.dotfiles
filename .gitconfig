[alias]
  d              = difftool
  m              = mergetool
  aa             = add --all
  ca             = commit --amend
  co             = checkout
  cp             = cherry-pick
  st             = status
  undo-commit    = reset --soft HEAD^
  unstage        = reset HEAD
  up             = !git fetch origin && git rebase origin/master
  l              = log --oneline --decorate --color
  la             = "!git config -l | grep alias | cut -c 7-"
[core]
	excludesfile = ~/.gitignore
  editor = nvim
[commit]
	verbose = true
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[difftool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE
[merge]
	ff = only
	tool = vimdiff
[mergetool]
  prompt = false
[mergetool "vimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[push]
	default = current
  followTags = true
[rebase]
	autosquash = true
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
